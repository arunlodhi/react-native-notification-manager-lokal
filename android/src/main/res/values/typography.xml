<?xml version="1.0" encoding="UTF-8" ?>
<resources>

    <!--    ======================================  -->
    <!--    Text styles specific to non-telugu locale  -->
    <!--    ======================================  -->

    <!-- Begin custom text styles -->
    <style name="TextAppearance.Lokal.Label1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:lineSpacingMultiplier">@dimen/multiplier_label1</item>
        <item name="fontPath">fonts/NotoSans-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Lokal.Label1.Prominent" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:lineSpacingMultiplier">@dimen/multiplier_label1</item>
        <item name="fontPath">fonts/NotoSans-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Lokal.Label2.Prominent" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lineSpacingMultiplier">@dimen/multiplier_label2</item>
        <item name="fontPath">fonts/NotoSans-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Lokal.Caption1" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:lineSpacingMultiplier">@dimen/multiplier_caption1</item>
        <item name="fontPath">fonts/NotoSans-Regular.ttf</item>
    </style>
    <!-- End custom text styles -->

    <style name="NotificationTitleStyle" parent="TextAppearance.Lokal.Label2.Prominent">
        <item name="android:textColor">@color/notification_primary_text_color</item>
    </style>

    <style name="NotificationTitleStyleV5" parent="TextAppearance.Lokal.Label1.Prominent">
        <item name="android:textColor">@color/notification_primary_text_color</item>
    </style>

    <style name="NotificationTitleStyleV6" parent="TextAppearance.Lokal.Label1.Prominent">
        <item name="android:textColor">@color/notification_primary_text_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="NotificationTitleStyleTitle" parent="TextAppearance.Lokal.Label1">
        <item name="android:textColor">@color/notification_primary_text_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationTitleStyleBody" parent="TextAppearance.Lokal.Label1">
        <item name="android:textColor">@color/notification_primary_text_color</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NotificationWithoutImageTitleStyle" parent="TextAppearance.Lokal.Label1.Prominent">
        <item name="android:textColor">@color/notification_primary_text_color</item>
    </style>

    <style name="NotificationContentStyle" parent="TextAppearance.Lokal.Caption1">
        <item name="android:textColor">@color/notification_text_color</item>
    </style>

</resources>