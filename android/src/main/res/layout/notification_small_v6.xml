<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        style="@style/NotificationTitleStyleV6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/image_container"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/body"
        style="@style/NotificationTitleStyleV6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_toStartOf="@id/image_container"
        android:maxLines="1"
        android:layout_below="@+id/title" />

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/blurr_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            app:riv_corner_radius="@dimen/dp_4"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/icon"
            app:riv_corner_radius="@dimen/dp_4"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/notification_logo_height_small"
            android:layout_height="@dimen/notification_logo_height_small"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/dp_4"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_4"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_lokal_notification_logo_new" />

    </FrameLayout>

</RelativeLayout>
