<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
       android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/blurr_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            app:riv_corner_radius="@dimen/dp_4"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/icon"
            app:riv_corner_radius="@dimen/dp_4"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/notification_logo_height_small"
            android:layout_height="@dimen/notification_logo_height_small"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_lokal_notification_yellow_bg" />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/NotificationTitleStyleV6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_4"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/image_container"
        app:layout_constraintTop_toTopOf="@id/image_container" />

    <TextView
        android:id="@+id/body"
        style="@style/NotificationTitleStyleV6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp_4"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_16"
        android:maxLines="1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/image_container"
        android:layout_below="@id/title" />


</RelativeLayout>