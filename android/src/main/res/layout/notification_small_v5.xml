<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="@dimen/notification_image_height_small"
        android:layout_height="@dimen/notification_image_height_small"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/blurr_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="fill"
            android:adjustViewBounds="true" />


        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/notification_logo_height_small"
            android:layout_height="@dimen/notification_logo_height_small"
            android:src="@drawable/ic_logo_notification_32dp"
            android:scaleType="centerInside"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:adjustViewBounds="true"/>

    </FrameLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/notification_image_height_small"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image_container"
        style="@style/NotificationTitleStyleV5"/>

</RelativeLayout>